@model List<Category>
@{
}

<h2 class=" text-center mb-5"> List of Categories</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Category" asp-action="Create">Add Category</a>
	</div>
	<div class="col">
	</div>
</div>

<table>
    <thead>
        <tr>
            <th>Category Name</th>
            @* <th>CategoryId</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-controller="Products" asp-route-id="@category.CategoryId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



